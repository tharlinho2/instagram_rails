<main class="posts-page container">
  <section class="posts">
    <% if @posts.any? %>
      <%= render @posts %>
    <% else %>
      Nenhum post encontrado! 😐
    <% end %>

  </section>

  <aside>
    <%= render current_user %>

    <section class="suggestions">
      <h4>Sugestôes Para Você</h4>

      <%= render @suggested_users %>
    </section>

    <footer>
      © <%= Date.current.year %> INSTAGRAM CLONE
    </footer>
  </aside>
</main>